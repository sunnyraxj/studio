
{
  "entities": {
    "Shop": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Shop",
      "type": "object",
      "description": "Represents a shop or business entity within the multi-tenant system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Shop entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the shop."
        },
        "ownerId": {
          "type": "string",
          "description": "Reference to UserProfile. (Relationship: UserProfile 1:N Shop). The ID of the user who owns this shop."
        },
        "logoUrl": {
          "type": "string",
          "description": "URL of the shop's logo."
        }
      },
      "required": [
        "id",
        "name",
        "ownerId"
      ]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile in the system.  Does not store authentication information.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the UserProfile entity."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user."
        },
        "subscriptionStatus": {
          "type": "string",
          "description": "The user's current subscription status.",
          "enum": [
            "active",
            "inactive",
            "pending_verification",
            "rejected"
          ]
        },
        "shopId": {
          "type": "string",
          "description": "The ID of the shop this user belongs to."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the system.",
          "enum": [
            "user",
            "admin"
          ]
        },
        "razorpay_payment_id": {
            "type": "string",
            "description": "The ID of the last successful payment from Razorpay."
        },
        "planName": {
            "type": "string",
            "description": "The name of the subscription plan."
        },
        "planPrice": {
          "type": "number",
          "description": "The price of the plan the user is subscribing to."
        },
        "planDurationValue": {
            "type": "number",
            "description": "The value of the subscription plan's duration (e.g., 30)."
        },
        "planDurationType": {
            "type": "string",
            "enum": ["hours", "days", "months", "years"],
            "description": "The unit of the subscription plan's duration (e.g., 'days')."
        },
        "subscriptionRequestDate": {
            "type": "string",
            "format": "date-time",
            "description": "The date the user requested the subscription."
        },
        "subscriptionStartDate": {
            "type": "string",
            "format": "date-time",
            "description": "The date the subscription started."
        },
        "subscriptionEndDate": {
            "type": "string",
            "format": "date-time",
            "description": "The date the subscription ends."
        },
        "subscriptionType": {
            "type": "string",
            "description": "Indicates if the subscription request is new or a renewal.",
            "enum": ["New", "Renew"]
        },
        "lastAdjustment": {
          "type": "object",
          "description": "Details of the last manual plan adjustment by an admin.",
          "properties": {
            "days": {
              "type": "number",
              "description": "The number of days added (positive) or removed (negative)."
            },
            "reason": {
              "type": "string",
              "description": "The reason provided by the admin for the adjustment."
            },
            "date": {
              "type": "string",
              "format": "date-time",
              "description": "The timestamp when the adjustment was made."
            }
          }
        }
      },
      "required": [
        "id",
        "email",
        "name",
        "subscriptionStatus",
        "role"
      ]
    },
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in a shop's inventory.",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "stock": {
          "type": "number"
        },
        "category": {
          "type": "string"
        },
        "sku": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "margin": {
            "type": "number",
            "description": "The profit margin percentage for the product."
        },
        "material": {
            "type": "string",
            "description": "The material of the product."
        },
        "expiryDate": {
            "type": "string",
            "format": "date",
            "description": "The expiration date of the product."
        },
        "returnableToSupplier": {
          "type": "boolean",
          "description": "Indicates if the product can be returned to the supplier."
        }
      },
      "required": [
        "id",
        "name",
        "price",
        "stock",
        "status",
        "margin"
      ]
    },
    "Sale": {
      "type": "object",
      "title": "Sale",
      "description": "Represents a single sale transaction.",
      "properties": {
        "id": {
          "type": "string"
        },
        "invoiceNumber": {
          "type": "string",
          "description": "The unique identifier for the invoice (e.g., INV-2024-0001 or BILL-2024-0001)."
        },
        "isGstInvoice": {
            "type": "boolean",
            "description": "True if the sale was made with a company GSTIN and is a tax invoice."
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "total": {
          "type": "number"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              },
              "price": {
                "type": "number"
              },
              "margin": {
                "type": "number"
              }
            },
            "required": [
              "productId",
              "name",
              "quantity",
              "price",
              "margin"
            ]
          }
        },
        "customer": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "phone": { "type": "string" },
            "address": { "type": "string" },
            "pin": { "type": "string" },
            "state": { "type": "string" },
            "gstin": { "type": "string" }
          }
        },
        "paymentMode": {
          "type": "string",
          "enum": ["cash", "card", "upi", "both"]
        },
        "paymentDetails": {
          "type": "object",
          "properties": {
            "cash": { "type": "number" },
            "card": { "type": "number" },
            "upi": { "type": "number" }
          }
        },
        "challanId": {
            "type": "string",
            "description": "The ID of the challan this sale is associated with."
        },
        "status": {
            "type": "string",
            "description": "The current status of the sale.",
            "enum": ["Completed", "Partially Returned", "Fully Returned", "Cancelled"]
        }
      },
      "required": [
        "id",
        "date",
        "total",
        "items",
        "paymentMode"
      ]
    },
    "Challan": {
      "type": "object",
      "title": "Challan",
      "description": "Represents a single delivery challan.",
      "properties": {
        "id": {
          "type": "string"
        },
        "invoiceNumber": {
          "type": "string",
          "description": "The unique identifier for the challan (e.g., CHLN-2024-0001)."
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "total": {
          "type": "number"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              },
              "price": {
                "type": "number"
              },
              "margin": {
                "type": "number"
              }
            },
            "required": [
              "productId",
              "name",
              "quantity",
              "price",
              "margin"
            ]
          }
        },
        "customer": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "phone": { "type": "string" },
            "address": { "type": "string" },
            "pin": { "type": "string" },
            "state": { "type": "string" },
            "gstin": { "type": "string" }
          }
        },
        "paymentMode": {
          "type": "string",
          "enum": ["cash", "card", "upi", "both"]
        },
        "paymentDetails": {
          "type": "object",
          "properties": {
            "cash": { "type": "number" },
            "card": { "type": "number" },
            "upi": { "type": "number" }
          }
        }
      },
      "required": [
        "id",
        "date",
        "total",
        "items",
        "paymentMode"
      ]
    },
    "KhataEntry": {
        "type": "object",
        "title": "Khata Entry",
        "description": "Represents a single credit entry in the Khata Book.",
        "properties": {
            "id": { "type": "string" },
            "customerName": { "type": "string" },
            "customerPhone": { "type": "string" },
            "amount": { "type": "number" },
            "notes": { "type": "string" },
            "date": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["unpaid", "paid"] }
        },
        "required": ["id", "customerName", "amount", "date", "status"]
    },
    "Employee": {
        "type": "object",
        "title": "Employee",
        "description": "Represents a shop employee.",
        "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "phone": { "type": "string" },
            "address": { "type": "string" },
            "role": { "type": "string" },
            "joiningDate": { "type": "string", "format": "date-time" },
            "monthlySalary": { "type": "number" },
            "bankDetails": {
                "type": "object",
                "properties": {
                    "bankName": { "type": "string" },
                    "accountNumber": { "type": "string" },
                    "ifscCode": { "type": "string" },
                    "upiId": { "type": "string" }
                }
            }
        },
        "required": ["id", "name", "joiningDate", "monthlySalary"]
    },
    "SalaryPayment": {
        "type": "object",
        "title": "Salary Payment",
        "description": "Represents a single salary payment to an employee.",
        "properties": {
            "id": { "type": "string" },
            "employeeId": { "type": "string" },
            "paymentDate": { "type": "string", "format": "date-time" },
            "amount": { "type": "number" },
            "notes": { "type": "string" }
        },
        "required": ["id", "employeeId", "paymentDate", "amount"]
    },
    "SubscriptionPlan": {
      "title": "Subscription Plan",
      "type": "object",
      "description": "Defines a subscription plan available for purchase.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "price": { "type": "number" },
        "originalPrice": { "type": "number" },
        "durationValue": { "type": "number" },
        "durationType": { "type": "string", "enum": ["hours", "days", "months", "years"] },
        "description": { "type": "string" },
        "features": { "type": "array", "items": { "type": "string" } },
        "highlight": { "type": "boolean" },
        "order": { "type": "number", "description": "Sort order for displaying plans." }
      },
      "required": ["id", "name", "price", "durationValue", "durationType", "order"]
    },
    "Supplier": {
      "title": "Supplier",
      "type": "object",
      "description": "Represents a supplier or vendor.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "address": { "type": "string" }
      },
      "required": ["id", "name", "category"]
    },
    "SupplierCategory": {
      "title": "Supplier Category",
      "type": "object",
      "description": "A category for organizing suppliers.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "Purchase": {
      "title": "Purchase",
      "type": "object",
      "description": "Represents a purchase bill from a supplier.",
      "properties": {
        "id": { "type": "string" },
        "billNumber": { "type": "string" },
        "billDate": { "type": "string", "format": "date-time" },
        "totalAmount": { "type": "number" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "itemName": { "type": "string" },
              "quantity": { "type": "number" },
              "rate": { "type": "number" }
            },
            "required": ["itemName", "quantity", "rate"]
          }
        },
        "paidAmount": { "type": "number" },
        "status": { "type": "string", "enum": ["Paid", "Unpaid", "Partially Paid"] }
      },
      "required": ["id", "billDate", "totalAmount", "items", "paidAmount", "status"]
    },
    "PurchasePayment": {
      "title": "Purchase Payment",
      "type": "object",
      "description": "Represents a payment made towards a purchase bill.",
      "properties": {
        "id": { "type": "string" },
        "paymentDate": { "type": "string", "format": "date-time" },
        "amount": { "type": "number" },
        "mode": { "type": "string", "enum": ["Cash", "Bank Transfer", "UPI", "Cheque"] },
        "notes": { "type": "string" }
      },
      "required": ["id", "paymentDate", "amount", "mode"]
    },
    "QuickPrint": {
        "title": "Quick Print",
        "type": "object",
        "description": "Represents a record of a barcode printed from the Quick Barcode generator.",
        "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "price": { "type": "number" },
            "sku": { "type": "string" },
            "size": { "type": "string" },
            "expiryDate": { "type": "string", "format": "date" },
            "printDate": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "name", "price", "printDate"]
    },
    "CreditNote": {
      "title": "Credit Note",
      "type": "object",
      "description": "Represents a credit note issued for a sales return, reversing a previous sale.",
      "properties": {
        "id": { "type": "string" },
        "creditNoteNumber": { "type": "string" },
        "originalInvoiceId": { "type": "string" },
        "originalInvoiceNumber": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "customer": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "phone": { "type": "string" },
            "gstin": { "type": "string" }
          }
        },
        "items": {
          "type": "array",
          "items": { "$ref": "#/entities/Sale/properties/items/items" }
        },
        "taxableValue": { "type": "number", "description": "The total taxable value of the returned items (negative)." },
        "cgst": { "type": "number", "description": "The total CGST reversed (negative)." },
        "sgst": { "type": "number", "description": "The total SGST reversed (negative)." },
        "igst": { "type": "number", "description": "The total IGST reversed (negative)." },
        "totalAmount": { "type": "number", "description": "The total value of the credit note (negative)." }
      },
      "required": ["id", "creditNoteNumber", "originalInvoiceId", "originalInvoiceNumber", "date", "customer", "items", "totalAmount"]
    },
     "KOT": {
      "title": "Kitchen Order Ticket",
      "type": "object",
      "description": "Represents a pending order sent to the kitchen before billing.",
      "properties": {
        "id": { "type": "string" },
        "tableNumber": { "type": "string" },
        "customerName": { "type": "string" },
        "instructions": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Sale/properties/items/items"
          }
        },
        "status": {
          "type": "string",
          "enum": ["Active", "Billed", "Cancelled"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["items", "status", "createdAt"]
    },
    "HomepageFeature": {
      "title": "Homepage Feature",
      "type": "object",
      "description": "Represents a feature card displayed on the main landing page.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "icon": { "type": "string", "description": "The name of the lucide-react icon to display." },
        "keyPoints": { "type": "array", "items": { "type": "string" }, "description": "A list of key features to display as bullet points." },
        "imageUrl": { "type": "string", "description": "URL for the feature's image." },
        "imageHint": { "type": "string", "description": "Hint for AI image generation tools." },
        "order": { "type": "number", "description": "The sort order for displaying the feature on the page." }
      },
      "required": ["id", "title", "description", "icon", "keyPoints", "imageUrl", "order"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores user profile information. Path-based ownership ensures only the user can access their profile."
        }
      },
      {
        "path": "/shops/{shopId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/Shop"
          },
          "description": "Stores shop information. Includes denormalized 'ownerId' for authorization independence."
        }
      },
      {
        "path": "/shops/{shopId}/products/{productId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/Product"
          },
          "description": "Products for a specific shop."
        }
      },
      {
        "path": "/shops/{shopId}/sales/{saleId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/Sale"
          },
          "description": "Sales records for a specific shop."
        }
      },
      {
        "path": "/shops/{shopId}/challans/{challanId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/Challan"
          },
          "description": "Delivery challans for a specific shop."
        }
      },
      {
        "path": "/shops/{shopId}/settings/{docId}",
        "definition": {
          "schema": {
            "type": "object"
          },
          "description": "Settings for a specific shop."
        }
      },
       {
        "path": "/shops/{shopId}/khataEntries/{khataEntryId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/KhataEntry"
          },
          "description": "Credit ledger entries for a specific shop."
        }
      },
      {
        "path": "/shops/{shopId}/employees/{employeeId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/Employee"
          },
          "description": "Employee records for a specific shop."
        }
      },
      {
        "path": "/shops/{shopId}/employees/{employeeId}/salaryPayments/{paymentId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/SalaryPayment"
          },
          "description": "Salary payment history for a specific employee."
        }
      },
      {
        "path": "/plans/{planId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/SubscriptionPlan"
          },
          "description": "Global subscription plans available to all users."
        }
      },
      {
        "path": "/shops/{shopId}/suppliers/{supplierId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/Supplier"
          },
          "description": "Suppliers for a specific shop."
        }
      },
      {
        "path": "/shops/{shopId}/supplierCategories/{categoryId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/SupplierCategory"
          },
          "description": "Categories for organizing suppliers."
        }
      },
      {
        "path": "/shops/{shopId}/suppliers/{supplierId}/purchases/{purchaseId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/Purchase"
          },
          "description": "Purchase records from a specific supplier."
        }
      },
      {
        "path": "/shops/{shopId}/suppliers/{supplierId}/purchases/{purchaseId}/payments/{paymentId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/PurchasePayment"
          },
          "description": "Payments made for a specific purchase."
        }
      },
      {
        "path": "/shops/{shopId}/quickPrints/{quickPrintId}",
        "definition": {
            "schema": {
                "$ref": "#/backend/entities/QuickPrint"
            },
            "description": "History of barcodes printed from the Quick Barcode generator."
        }
      },
      {
        "path": "/shops/{shopId}/creditNotes/{creditNoteId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/CreditNote"
          },
          "description": "Credit Notes for returned sales in a specific shop."
        }
      },
      {
        "path": "/shops/{shopId}/kots/{kotId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/KOT"
          },
          "description": "Stores active Kitchen Order Tickets for a specific shop."
        }
      },
      {
        "path": "/homepageFeatures/{featureId}",
        "definition": {
          "schema": {
            "$ref": "#/backend/entities/HomepageFeature"
          },
          "description": "Configuration for the feature cards shown on the public landing page."
        }
      }
    ]
  }
}

    
