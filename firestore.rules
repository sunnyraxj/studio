
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // Is the requesting user the owner of the document specified by `userId`?
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Does the requesting user belong to the shop specified by `shopId`?
    // This is checked by looking at the `shopId` field in their user profile.
    function isShopMember(shopId) {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.shopId == shopId;
    }

    // Is the requesting user an admin?
    function isAdmin() {
      // Use this if admin status is stored in a user document.
      // Make sure this path is correct for your user data structure.
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Rules ---

    // Publicly readable, admin-writable plans
    match /plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Publicly readable, admin-writable homepage features
    match /homepageFeatures/{featureId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // User profiles and their sub-collections
    match /users/{userId} {
      // A user can read and write their own profile.
      // An admin can also read any user's profile.
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // All shop-related data
    match /shops/{shopId}/{document=**} {
      // A user who is a member of the shop can read and write anything within that shop's data.
      // Admins can also read and write anything.
      allow read, write: if isShopMember(shopId) || isAdmin();
    }
  }
}
