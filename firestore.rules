
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isShopOwner(shopId) {
      // Ensure the shop document exists and the ownerId matches.
      return exists(/databases/$(database)/documents/shops/$(shopId)) &&
             get(/databases/$(database)/documents/shops/$(shopId)).data.ownerId == request.auth.uid;
    }
    
    function getUserShopId() {
        // Ensure the user document exists before trying to access its data.
        return exists(/databases/$(database)/documents/users/$(request.auth.uid)) ?
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.shopId :
               null;
    }

    function isAdmin() {
      // Check if the user document exists and has the role of 'admin'.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /users/{userId} {
      // Allow users to read their own profile, and admins to read any profile.
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      
      // Allow a user to create their own profile document.
      allow create: if isOwner(userId);
      
      // Allow a user to update their own profile.
      // An admin can also update any profile.
      // A user cannot change their own role.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      
      // Only admins can delete user profiles.
      allow delete: if isAdmin();
    }

    match /shops/{shopId} {
      // Allow shop owner or admin to read the shop document.
      allow get: if isShopOwner(shopId) || isAdmin();
      
      // Any signed-in user can create a shop document.
      allow create: if isSignedIn();
      
      // Allow shop owner to update their shop, but not change ownerId.
      // Admins can update anything.
      allow update: if (isShopOwner(shopId) && request.resource.data.ownerId == resource.data.ownerId) || isAdmin();
      
      // Only admins can delete shops.
      allow delete: if isAdmin();
    }
    
    // Special rule for global admin settings to be readable by any logged-in user.
    match /shops/global/settings/details {
      allow get: if isSignedIn();
      allow write: if isAdmin();
    }

    // Secure all subcollections within a shop (products, sales, settings).
    match /shops/{shopId}/{subcollection}/{docId} {
      // Exclude the global settings from this rule.
      if shopId != 'global' {
        // The owner of the shop or an admin can perform any action.
        allow read, write, delete: if isShopOwner(shopId) || isAdmin();
      }
    }
  }
}
